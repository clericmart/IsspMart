<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                      http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
  version="3.1"
  metadata-complete="true">
  <display-name>First Servlet Project</display-name>
	<servlet>
		<display-name>First Servlet</display-name>
		<servlet-name>fs</servlet-name>
		<servlet-class>ua.web.martynenko.servlet.FirstServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>fs</servlet-name>
		<url-pattern>/first</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<display-name>Param Servlet</display-name>
		<servlet-name>ps</servlet-name>
		<servlet-class>ua.web.martynenko.servlet.ParamServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>ps</servlet-name>
		<url-pattern>/param</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<display-name>Home Servlet</display-name>
		<servlet-name>hs</servlet-name>
		<servlet-class>ua.web.martynenko.servlet.ServletHome</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>hs</servlet-name>
		<url-pattern>/home</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<display-name>Calc Servlet</display-name>
		<servlet-name>cs</servlet-name>
		<servlet-class>ua.web.martynenko.calcservlet.CalcServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>cs</servlet-name>
		<url-pattern>/calc</url-pattern>
	</servlet-mapping>
	
	<welcome-file-list>
		<welcome-file><![CDATA[HTML/Hello.htm]]></welcome-file>
	</welcome-file-list>
	
	<session-config>
		<session-timeout>30</session-timeout>
	</session-config>
	
	<!--  
	<login-config>
		<auth-method>BASIC</auth-method>
	</login-config> -->
</web-app>